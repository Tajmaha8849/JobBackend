{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",  // Points to the backend code in the 'api' directory
      "use": "@vercel/node"  // This tells Vercel to use Node.js to run the serverless functions
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"  // This rewrites all API requests to the corresponding serverless function in the 'api' directory
    }
  ]
}
